# Terraform Variables Configuration Example
# Copy this file to terraform.tfvars and update the values

# Core Configuration
environment   = "prod"
project      = "aks101"
location     = "East US"
location_code = "eus"

# Network Configuration
vnet_address_space = "10.240.0.0/16"
pod_cidr          = "192.168.0.0/16"
service_cidr      = "172.16.0.0/16"
dns_service_ip    = "172.16.0.10"

# AKS Configuration
kubernetes_version = "1.28.5"

# SQL Server Configuration (REQUIRED)
sql_admin_username         = "sqladmin"
# sql_admin_password         = "YourStrongPassword123!"  # Change this!
# sql_azuread_admin_login    = "sql-admins"
# sql_azuread_admin_object_id = "12345678-1234-1234-1234-123456789012"  # Azure AD group object ID

# Security Configuration (REQUIRED)
# security_email = "security@yourcompany.com"  # Change this!

# Application Configuration
app_namespace        = "aks-app"
app_service_account = "workload-identity-sa"

# SSL Configuration
ssl_cert_password = "demo123!"  # Change for production

# Feature Flags
enable_container_registry = true
enable_secret_rotation    = true
secret_rotation_interval  = "2m"

# API Server VNet Integration (ASVNI)
enable_api_server_vnet_integration = false
# When enabled, API server subnets are computed automatically per cluster (/27 within a reserved /24).

# Firewall Configuration
firewall_enforcement_enabled = false  # true for enforcement, false for audit-only (default)

# Tags
tags = {
  ManagedBy   = "terraform"
  Project     = "aks-secure-baseline"
  Environment = "production"
  Owner       = "platform-team"
  CostCenter  = "engineering"
}